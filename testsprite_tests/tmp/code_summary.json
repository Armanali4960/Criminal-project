{
  "tech_stack": ["Python", "Django", "OpenCV", "SQLite", "HTML/CSS/JavaScript"],
  "features": [
    {
      "name": "Citizen Dashboard",
      "description": "Allows citizens to upload images for criminal detection",
      "files": ["detection/views.py", "templates/detection/citizen_dashboard.html"],
      "api_doc": {
        "paths": {
          "/": {
            "get": {
              "summary": "Citizen dashboard page",
              "description": "Displays the citizen dashboard for uploading images"
            }
          }
        }
      }
    },
    {
      "name": "Image Upload",
      "description": "Handles image uploads from citizens for criminal detection",
      "files": ["detection/views.py"],
      "api_doc": {
        "paths": {
          "/upload_image/": {
            "post": {
              "summary": "Upload image for detection",
              "description": "Accepts image uploads and processes them for criminal detection"
            }
          }
        }
      }
    },
    {
      "name": "Police Dashboard",
      "description": "Allows police to view detection reports",
      "files": ["detection/views.py", "templates/detection/police_dashboard.html"],
      "api_doc": {
        "paths": {
          "/police_dashboard/": {
            "get": {
              "summary": "Police dashboard page",
              "description": "Displays the police dashboard with detection reports"
            }
          }
        }
      }
    },
    {
      "name": "Authentication",
      "description": "Handles user authentication for citizens and police",
      "files": ["detection/views.py", "templates/detection/login.html", "templates/detection/police_login.html", "templates/detection/register.html"],
      "api_doc": {
        "paths": {
          "/login/": {
            "post": {
              "summary": "Citizen login",
              "description": "Authenticates citizens"
            }
          },
          "/police_login/": {
            "post": {
              "summary": "Police login",
              "description": "Authenticates police officers"
            }
          },
          "/register/": {
            "post": {
              "summary": "Citizen registration",
              "description": "Registers new citizens"
            }
          }
        }
      }
    }
  ]
}